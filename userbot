#!/bin/bash


_repolink () {
    local regex
    regex='(https?)://github.com/.+/.+'
    if [[ $userbot_repo == "userbot" ]]
    then 
        echo "" | base64 -d
    elif [[ $userbot_repo == "userbot" ]]
    then
        echo "" | base64 -d
    elif [[ $userbot_repo =~ $regex ]]
    then
        if [[ $userbot_repo_branch ]]
        then
            echo "${userbot_repo}/archive/${userbot_repo_branch}.zip"
        else
            echo "${userbot_repo}/archive/master.zip"
        fi
    else
        echo "" | base64 -d
    fi
}


start_bot () {
    local zippath
    zippath="userbot.zip"
    echo "  Downloading source code ..."
    wget -q $(_repolink) -O "$zippath"
    echo "  Unpacking Data ..."
    IBELSPATH=$(zipinfo -1 "$zippath" | grep -v "/.");
    unzip -qq "$zippath"
    echo "  Processing Codes..."
    rm -rf "$zippath"
    sleep 5
    cd $IBELSPATH
    echo "  • Starting Userbot •  "

    python3 ../setup/updater.py ../requirements.txt requirements.txt
    python3 -m userbot
}

start_bot
